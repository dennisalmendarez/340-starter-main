<!-- views/inventory/add-classification.ejs -->
<%- messages() %>

<% if (errors) { %>
    <div class="notice">
        <ul>
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <%  }) %>
        </ul>
    </div>
<% } %>

<div class="form-container">
    <h1><%= title %></h1>

    <form action="/inv/add-classification" method="post" class="login-form">
        <label for="classification_name">Classification Name:</label>
        <span class="password-rules">Cannot contain spaces or special characters.</span>
        <input type="text" name="classification_name" id="classification_name" required 
               pattern="^[a-zA-Z0-9]+$" 
               title="Classification cannot contain spaces or special characters."
               placeholder="e.g. SUV">

        <button type="submit">Add Classification</button>
    </form>
</div>
<!-- views/inventory/add-inventory.ejs -->
<%- messages() %>
<% if (errors) { %>
    <div class="notice">
        <ul>
            <% errors.array().forEach(error => { %>
                <li><%= error.msg %></li>
            <%  }) %>
        </ul>
    </div>
<% } %>

<div class="form-container">
    <h1><%= title %></h1>
    <form action="/inv/add-inventory" method="post" class="login-form">
        <label for="classificationList">Classification:</label>
        <%- classificationList %>

        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" required value="<%= locals.inv_make %>">

        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" required value="<%= locals.inv_model %>">

        <label for="inv_description">Description:</label>
        <textarea name="inv_description" required><%= locals.inv_description %></textarea>

        <label for="inv_image">Image Path:</label>
        <input type="text" name="inv_image" required value="/images/vehicles/no-image.png">

        <label for="inv_thumbnail">Thumbnail Path:</label>
        <input type="text" name="inv_thumbnail" required value="/images/vehicles/no-image.png">

        <label for="inv_price">Price:</label>
        <input type="number" name="inv_price" required value="<%= locals.inv_price %>">

        <label for="inv_year">Year:</label>
        <input type="number" name="inv_year" required value="<%= locals.inv_year %>">

        <label for="inv_miles">Miles:</label>
        <input type="number" name="inv_miles" required value="<%= locals.inv_miles %>">

        <label for="inv_color">Color:</label>
        <input type="text" name="inv_color" required value="<%= locals.inv_color %>">

        <button type="submit">Add Vehicle</button>
    </form>
</div>
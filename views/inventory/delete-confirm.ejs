<div class="form-container">
    <h1><%= title %></h1>
    <p>Confirm Deletion - The delete is permanent.</p>
    <form action="/inv/delete" method="post" class="login-form">
        <label for="inv_make">Make:</label>
        <input type="text" name="inv_make" readonly value="<%= locals.inv_make %>">

        <label for="inv_model">Model:</label>
        <input type="text" name="inv_model" readonly value="<%= locals.inv_model %>">

        <label for="inv_year">Year:</label>
        <input type="text" name="inv_year" readonly value="<%= locals.inv_year %>">

        <label for="inv_price">Price:</label>
        <input type="text" name="inv_price" readonly value="<%= locals.inv_price %>">

        <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
        <button type="submit">Delete Vehicle</button>
    </form>
</div>
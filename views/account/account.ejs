<%- messages() %>
<% if (errors) { %>
    <div class="notice">
        <%- errors %>
    </div>
<% } %>

<div class="account-container">
    <h1><%= title %></h1>
    
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <p>You're logged in</p>

    <h3>Account Management</h3>
    <p>
        <a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information">
            Update Account Information
        </a>
    </p>

    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
        <div class="inventory-mgmt-section">
            <h3>Inventory Management</h3>
            <p>
                <a href="/inv/" title="Click to manage inventory">Manage Inventory</a>
            </p>
        </div>
    <% } %>
    <p>
        <a href="/account/saved" title="View saved vehicles">Saved Vehicles</a>
    </p>

</div>